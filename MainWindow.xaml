<Window x:Class="MyDarkApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Manager Pro" Height="550" Width="900"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
        </Storyboard>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="itBorder" CornerRadius="10" Margin="0,2" Padding="8" Background="Transparent">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="itBorder" Property="Background" Value="#E0F2FE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" CornerRadius="30" Background="#F8FAFC" BorderBrush="White" BorderThickness="1" Opacity="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Color="#CBD5E1" ShadowDepth="4" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.7*"/>
                    <ColumnDefinition Width="1.3*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Процессы" Foreground="#1E293B" FontSize="28" FontWeight="Black" Margin="5,0,0,20"/>
                    <Border CornerRadius="12" Background="White" Padding="15,5" Margin="0,0,0,15">
                        <TextBox x:Name="SearchBox" Height="30" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" FontSize="14" TextChanged="SearchBox_TextChanged"/>
                    </Border>
                    <ListBox x:Name="ProcessList" Height="340" Background="Transparent" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="450">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="40" Height="40" Background="#EFF6FF" CornerRadius="10" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding ProcessName[0]}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#3B82F6" FontSize="16"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ProcessName}" Foreground="#1E293B" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding Id, StringFormat='PID: {0}'}" Foreground="#94A3B8" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="—" Click="Minimize_Click" Background="Transparent" BorderThickness="0" Foreground="#94A3B8" FontSize="20"/>
                        <Button Content="✕" Click="Close_Click" Background="Transparent" BorderThickness="0" Foreground="#94A3B8" FontSize="20" Margin="15,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <Ellipse x:Name="UserAvatar" Width="100" Height="100" Margin="0,0,0,15" Stroke="White" StrokeThickness="4">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="10" Color="#CBD5E1" Opacity="0.5"/>
                            </Ellipse.Effect>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="AvatarImage" ImageSource="https://cdn.discordapp.com/embed/avatars/0.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="DiscordUserText" Text="ЗАГРУЗКА..." Foreground="#1E293B" FontSize="18" FontWeight="Black" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                        
                        <ProgressBar x:Name="CpuBar" Height="10" Foreground="#3B82F6" Background="#E2E8F0" BorderThickness="0" Margin="0,5">
                             <ProgressBar.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="5"/></Style></ProgressBar.Resources>
                        </ProgressBar>
                        <ProgressBar x:Name="RamBar" Height="10" Foreground="#8B5CF6" Background="#E2E8F0" BorderThickness="0" Margin="0,5">
                             <ProgressBar.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="5"/></Style></ProgressBar.Resources>
                        </ProgressBar>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <Button Content="ОБНОВИТЬ СПИСОК" Style="{StaticResource ModernButton}" Height="50" Margin="0,5" Click="Refresh_Click"/>
                        <Button Content="ЗАВЕРШИТЬ ПРОЦЕСС" Style="{StaticResource ModernButton}" Height="50" Margin="0,5" Background="#EF4444" Click="Kill_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Border x:Name="LoadingGrid" Background="#F8FAFC" CornerRadius="30" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="SYSTEM MANAGER" Foreground="#3B82F6" FontSize="24" FontWeight="Black"/>
                    <ProgressBar IsIndeterminate="True" Width="150" Height="3" Margin="0,25" Foreground="#3B82F6" Background="#E2E8F0" BorderThickness="0"/>
                    <TextBlock x:Name="StatusText" Text="Инициализация..." Foreground="#94A3B8" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>